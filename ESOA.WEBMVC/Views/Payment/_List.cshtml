@using ESOA.Model      

@model List<Payment> 

@if (@Model.Count > 0)
{  
    <div class="table-responsive text-nowrap">
        <table id="dtBasicExample" class="table table-bordered table-sm" cellspacing="0" width="100%">
            <thead>
                <tr class="table-secondary">
                    <th class="th-sm search-sortidx" data-sortindex="0" style="cursor:pointer;">Uploaded By</th>
                    <th class="th-sm search-sortidx" data-sortindex="0" style="cursor:pointer;">Date</th>
                    <th class="th-sm search-sortidx" data-sortindex="0" style="cursor:pointer;">Customer Name</th>
                    <th class="th-sm search-sortidx" data-sortindex="0" style="cursor:pointer;">Customer Id</th>
                    <th class="th-sm search-sortidx" data-sortindex="0" style="cursor:pointer;">Bank Account</th>
                    <th class="th-sm search-sortidx" data-sortindex="0" style="cursor:pointer;">Bank Account GL Code</th>
                    <th class="th-sm search-sortidx" data-sortindex="0" style="cursor:pointer;">USD Payment</th>
                    <th class="th-sm search-sortidx" data-sortindex="0" style="cursor:pointer;">Exc Rate</th>
                    <th class="th-sm search-sortidx" data-sortindex="0" style="cursor:pointer;">PHP Payment</th>
                    <th class="th-sm search-sortidx" data-sortindex="0" style="cursor:pointer;">Assignment</th>
                    <th class="th-sm search-sortidx" data-sortindex="0" style="cursor:pointer;">Text</th>
                    <th class="th-sm search-sortidx" data-sortindex="2" style="cursor:pointer;">SAP Doc Number</th>
                </tr>
            </thead>
            <tbody class="text-start">

                @{
                    foreach (Payment itm in Model)
                    {
                        <tr> 
                            <td class="text-center">@itm.UploadedBy</td>
                            <td class="text-center">@itm.Date</td>
                            <td class="text-center">@itm.OriginAgentName</td>
                            <td class="text-center">@itm.CustomerId</td>
                            <td class="text-center">@itm.BankAccount</td>
                            <td class="text-center">@itm.BankAccountGLCode</td>
                            <td>@itm.USDPayment</td>
                            <td>@itm.ExcRate</td>
                            <td>@itm.PHPPayment</td>
                            <td class="text-center">@itm.Assignment</td>
                            <td class="text-center">@itm.Text</td>
                            <td class="text-center">@itm.SAPDocNumber</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div> 
}
else
{
  <h6>No data found.</h6>
} 