@using ESOA.Model
@using ESOA.Model.View

@model List<AgentBalancesView> 

@if (@Model.Count > 0)
{  
    <div class="table-responsive text-nowrap">
        <table id="dtBasicExample" class="table table-bordered table-sm" cellspacing="0" width="100%">
            <thead>
                <tr class="table-secondary">
                    <th class="th-sm search-sortidx" data-sortindex="0" style="cursor:pointer;">Agent Name</th>
                    <th class="th-sm search-sortidx" data-sortindex="0" style="cursor:pointer;">Office Code</th>
                    <th class="th-sm search-sortidx" data-sortindex="0" style="cursor:pointer;">Agents Advance Funding</th> 
                </tr>
            </thead>
            <tbody class="text-start">

                @{
                    foreach (AgentBalancesView itm in Model)
                    {
                        <tr> 
                            <td><label>@itm.CustomerName</label></td> 
                            <td><label>@itm.OfficeCode</label></td>
                            <td><label>@itm.AgentBalances</label></td> 
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div> 
}
else
{
  <h6>No data found.</h6>
} 